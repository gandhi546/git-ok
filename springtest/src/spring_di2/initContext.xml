<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- mBean 객체에 OutFileImpl 객체를 생성 <ref>으로 객체 주소를 넘긴다 -->
	<bean id="mBean" class="spring_di2.MessageBeanImplDi">
		<constructor-arg index="0">
			<value>대한민국</value>
		</constructor-arg>
		<constructor-arg  index="1" value="서울"/>
		
		<property name="greeting" >
			<value>반가워!</value>
		</property>
		
		<!--다른 ref 입력 형식 : <property name="out" ref="outFile" />  -->
		<property name="out" >
			<ref bean="outFile"/>
		</property>
	
	</bean>

	<!--  파일경로는 역슬래쉬는 인식하지 못하니, 슬래쉬로 변경할 것-->			
	<bean id="outFile" class="spring_di2.OutFileImpl">
		<property name="filepath" >
			<value>C:/web/spring/good.txt</value>
		</property>
	
		<!-- <constructor-arg value=C:/web/spring/good.txt/> -->
	
	</bean>		

</beans>
